FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/fluid";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1e5;

boundaryField
{
    Outlet
    {
        type            fixedValue;
        value           uniform 100000;
    }
    Inlet
    {
        type            fixedFluxExtrapolatedPressure;
        gradient        uniform 0;
        value           uniform 100000;
    }
    Wall
    {
        type            zeroGradient;
    }
}


